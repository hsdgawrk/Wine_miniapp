.container {
  padding: 0;
  background: linear-gradient(180deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

/* 每日推荐卡片 */
.daily-cocktail-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 24rpx;
  box-shadow: 0 20rpx 50rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

.daily-cocktail-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255,255,255,0.2);
}

.daily-cocktail-image {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.daily-cocktail-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 10rpx;
  display: block;
  text-shadow: 0 2rpx 10rpx rgba(0,0,0,0.3);
  z-index: 1;
  position: relative;
}

.daily-cocktail-description {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  z-index: 1;
  position: relative;
}

/* 搜索栏 */
.search-bar {
  margin: 24rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 50rpx;
  padding: 8rpx 0;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255,255,255,0.3);
}

.search-input {
  font-size: 28rpx;
  padding: 16rpx 30rpx;
  background: transparent;
  border: none;
}

/* 分类标题 */
.section-title {
  font-size: 34rpx;
  font-weight: 600;
  padding: 30rpx 40rpx 20rpx;
  color: #2c3e50;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}

/* 配方卡片 */
.cocktail-card {
  background: rgba(255,255,255,0.95);
  margin: 20rpx 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255,255,255,0.3);
  position: relative;
  overflow: hidden;
}

.cocktail-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.6s;
}

.cocktail-card:active::before {
  left: 100%;
}

.cocktail-card:active {
  transform: scale(0.98);
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.15);
}

.cocktail-thumbnail {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.cocktail-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.cocktail-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
}

/* 浮动添加按钮 */
.floating-add-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #fff;
  font-size: 56rpx;
  line-height: 112rpx;
  text-align: center;
  box-shadow: 0 12rpx 35rpx rgba(238, 90, 82, 0.4);
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
}

.floating-add-button::before {
  content: '';
  position: absolute;
  top: 2rpx;
  left: 2rpx;
  right: 2rpx;
  bottom: 2rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0.1) 100%);
  border-radius: 50%;
  z-index: -1;
}

.floating-add-button:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 25rpx rgba(238, 90, 82, 0.6);
}
