.container {
  padding: 0;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 分享方式选择 */
.share-methods {
  padding: 40rpx;
  background: rgba(255,255,255,0.95);
  margin: 24rpx;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255,255,255,0.3);
  position: relative;
  overflow: hidden;
}

.share-methods::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  border-radius: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 50rpx;
  position: relative;
  z-index: 1;
}

.method-card {
  display: flex;
  align-items: center;
  padding: 40rpx;
  margin-bottom: 30rpx;
  background: rgba(248, 249, 250, 0.8);
  border-radius: 24rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 1;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08);
}

.method-card:active {
  transform: scale(0.98);
  background: rgba(102, 126, 234, 0.1);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.2);
}

.method-card:last-child {
  margin-bottom: 0;
}

.method-icon {
  width: 84rpx;
  height: 84rpx;
  margin-right: 32rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.1));
}

.method-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.method-desc {
  font-size: 26rpx;
  color: #5a6c7d;
}

/* 口令展示 */
.code-section {
  background: rgba(255,255,255,0.95);
  margin: 24rpx;
  padding: 50rpx;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255,255,255,0.3);
  position: relative;
  overflow: hidden;
}

.code-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  border-radius: 32rpx;
}

.code-label {
  display: block;
  font-size: 30rpx;
  color: #5a6c7d;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.share-code {
  display: block;
  font-size: 40rpx;
  font-weight: 800;
  color: #667eea;
  margin-bottom: 40rpx;
  text-align: center;
  background: rgba(102, 126, 234, 0.1);
  padding: 20rpx;
  border-radius: 16rpx;
  position: relative;
  z-index: 1;
}

.copy-button {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  padding: 24rpx 0;
  border-radius: 50rpx;
  width: 80%;
  margin: 0 auto;
  border: none;
  box-shadow: 0 8rpx 25rpx rgba(238, 90, 82, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.copy-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.6s;
}

.copy-button:active::before {
  left: 100%;
}

.copy-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(238, 90, 82, 0.4);
}

/* 二维码预览 */
.qrcode-section {
  background: rgba(255,255,255,0.95);
  margin: 24rpx;
  padding: 50rpx;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  text-align: center;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255,255,255,0.3);
  position: relative;
  overflow: hidden;
}

.qrcode-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  border-radius: 32rpx;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.qrcode-tips {
  font-size: 28rpx;
  color: #5a6c7d;
  position: relative;
  z-index: 1;
}

/* 底部提示 */
.tips-section {
  margin: 40rpx 24rpx 30rpx;
  padding: 40rpx;
  background: rgba(255, 251, 233, 0.9);
  border-radius: 24rpx;
  border-left: 6rpx solid #ffeb3b;
  box-shadow: 0 8rpx 30rpx rgba(255, 235, 59, 0.2);
  backdrop-filter: blur(10rpx);
}

.tip-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.tip-content {
  font-size: 28rpx;
  color: #5a6c7d;
  line-height: 1.6;
}
