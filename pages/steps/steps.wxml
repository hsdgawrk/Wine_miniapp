<view class="container">
  <!-- 步骤导航栏 -->
  <view class="step-navbar">
    <text class="nav-title">制作步骤</text>
    <text class="step-count">{{steps.length}}步</text>
  </view>

  <!-- 步骤列表 -->
  <view class="steps-list">
    <block wx:for="{{steps}}" wx:key="number">
      <view class="step-card {{item.animation}}">
        <view class="step-header">
          <text class="step-number">{{item.number}}</text>
          <text class="step-title">步骤 {{item.number}}</text>
        </view>
        <text class="step-instruction">{{item.instruction}}</text>
        
        <!-- 动画示意图 -->
        <image 
          class="step-illustration" 
          src="/images/step-{{item.number}}.png" 
          mode="aspectFit"
        />
      </view>
    </block>
  </view>

  <!-- 底部操作栏 -->
  <view class="bottom-action-bar">
    <button class="complete-button">完成调酒</button>
  </view>
</view>
