.container {
  padding: 0;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 表单标题 */
.form-header {
  padding: 50rpx 40rpx 40rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.15) 0%, rgba(255,255,255,0.05) 100%);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(255,255,255,0.2);
}

.form-title {
  font-size: 42rpx;
  font-weight: 800;
  color: #fff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 10rpx rgba(0,0,0,0.3);
}

.form-subtitle {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  text-shadow: 0 2rpx 5rpx rgba(0,0,0,0.2);
}

/* 表单区域 */
.form-section {
  background: rgba(255,255,255,0.95);
  margin: 24rpx;
  padding: 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255,255,255,0.3);
  position: relative;
  overflow: hidden;
}

.form-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  border-radius: 32rpx;
}

.form-group {
  margin-bottom: 50rpx;
  position: relative;
  z-index: 1;
}

.form-label {
  display: block;
  font-size: 30rpx;
  color: #2c3e50;
  margin-bottom: 24rpx;
  font-weight: 600;
  position: relative;
  z-index: 1;
}

.form-input {
  width: 100%;
  padding: 24rpx 30rpx;
  font-size: 30rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  background: rgba(248, 249, 250, 0.8);
  box-sizing: border-box;
  transition: all 0.3s ease;
  backdrop-filter: blur(5rpx);
  position: relative;
  z-index: 1;
}

.form-input:focus {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.2);
}

/* 步骤表单 */
.form-section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 40rpx;
  display: block;
  position: relative;
  z-index: 1;
}

.step-form-group {
  margin-bottom: 50rpx;
  position: relative;
  z-index: 1;
}

.step-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.step-number {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 700;
}

.remove-step-btn {
  font-size: 24rpx;
  color: #fff;
  padding: 8rpx 16rpx;
  height: auto;
  line-height: 1.2;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 4rpx 15rpx rgba(238, 90, 82, 0.3);
  transition: all 0.3s ease;
}

.remove-step-btn:active {
  transform: translateY(1rpx);
  box-shadow: 0 2rpx 10rpx rgba(238, 90, 82, 0.5);
}

.step-input {
  border-color: rgba(102, 126, 234, 0.2);
  background: rgba(240, 242, 247, 0.8);
}

.add-step-button {
  background: rgba(255,255,255,0.9);
  color: #667eea;
  border: 2rpx solid #667eea;
  font-size: 30rpx;
  font-weight: 600;
  padding: 20rpx 0;
  border-radius: 50rpx;
  margin-top: 24rpx;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.2);
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  position: relative;
  z-index: 1;
}

.add-step-button:active {
  transform: translateY(2rpx);
  background: #667eea;
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

/* 操作按钮 */
.action-buttons {
  padding: 40rpx 30rpx 30rpx;
  display: flex;
  gap: 24rpx;
}

.cancel-button,
.save-button {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 0;
  border-radius: 50rpx;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.cancel-button {
  background: rgba(224, 224, 224, 0.9);
  color: #5a6c7d;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.cancel-button:active {
  transform: translateY(2rpx);
  background: #bdbdbd;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.15);
}

.save-button {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #fff;
  box-shadow: 0 8rpx 25rpx rgba(238, 90, 82, 0.3);
}

.save-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.6s;
}

.save-button:active::before {
  left: 100%;
}

.save-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(238, 90, 82, 0.4);
}
